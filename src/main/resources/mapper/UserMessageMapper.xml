<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.gues.mjzblog.mapper.UserMessageMapper">

    <select id="selectMessages" resultType="cn.edu.gues.mjzblog.entity.vo.UserMessageVo">
        SELECT
            m.*, (
            SELECT
                username
            FROM
                user
            WHERE
                id = m.from_user_id
        ) AS fromUserName,
            (
                SELECT
                    title
                FROM
                    post
                WHERE
                    id = m.post_id
            ) AS postTitle
        FROM
            user_message m
            ${ew.customSqlSegment}
    </select>
</mapper>
